import java.util.Scanner; // Import the Scanner class

public class Main {
	public static void main(String[] args) {
	try
    {
    	Scanner sc = new Scanner(System.in);
        int m = sc.nextInt();  
        int x,y;
        
        for(int i=0;i<m;i++){
            x=sc.nextInt();
            y=sc.nextInt();
            int z=x+y;
            System.out.println(z);
        }
    }
    catch(Exception e)
    {
        System.out.println(e);
    }
       
	}
}
